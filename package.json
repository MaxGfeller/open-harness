{
  "name": "@openharness/core",
  "version": "0.1.0",
  "type": "module",
  "description": "Building blocks for capable, general-purpose agents",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./tools/fs": {
      "types": "./dist/tools/fs.d.ts",
      "import": "./dist/tools/fs.js"
    },
    "./tools/bash": {
      "types": "./dist/tools/bash.d.ts",
      "import": "./dist/tools/bash.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "cli": "tsx --env-file=.env example/cli.ts",
    "typecheck": "tsc --noEmit",
    "format": "oxfmt --write src example",
    "format:check": "oxfmt --check src example"
  },
  "keywords": [
    "agent",
    "ai",
    "llm",
    "tools",
    "mcp"
  ],
  "license": "ISC",
  "dependencies": {
    "@ai-sdk/mcp": "^1.0.21",
    "ai": "^6.0.97",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@ai-sdk/anthropic": "^3.0.46",
    "@ai-sdk/openai": "^3.0.30",
    "@types/node": "^25.3.0",
    "chalk": "^5.6.2",
    "ora": "^9.3.0",
    "oxfmt": "^0.35.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "zod": "^4.0.0"
  }
}
